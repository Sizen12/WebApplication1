@model WebApplication1.Models.AddStudentViewModel

<h2>Add Student</h2>
 
<form  method="post">
    <div class="mt- 3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>
    <div class="mt- 3">
        <label class="form-label">email</label>
        <input type="email" class="form-control" asp-for="Email"/>
    </div>
    <div class="mt- 3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Select Blood Group</label>
        <div class="input-group">
            <select class="form-select" id="BloodGroup" name="BloodGroup">
                <option value="">-- Select Blood Group --</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                @* @foreach (var bloodGroup in Model.BloodGroup)
					{
						<option value="@bloodGroup">@bloodGroup</option>
					} *@
            </select>
        </div>
    </div>

    <label>Gender:</label>
    <div>
        <input type="radio" class="ratio" asp-for="Gender" value="Male" />
        <label class="form-check-ratio" for="Gender">Male</label>
        <input type="radio" class="ratio" asp-for="Gender" value="Female" /> 
        <label class="form-check-ratio" for="Gender">Female</label>
    </div> 
    <div class="mt- 3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" required />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        </div>
</form>